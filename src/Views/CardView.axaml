<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1020" d:DesignHeight="640"
             x:Class="FurCard.Views.CardView">

	<!-- TODO: Find a way to handle resizing of resources nicely -->
	<DockPanel>
		<StackPanel
			HorizontalAlignment="Center"
			VerticalAlignment="Center">
			<TextBlock
				Text="Title"
				HorizontalAlignment="Center"
				FontSize="{StaticResource TitleFontSize}"/>
			<TextBlock
				Text="Header 1"
				HorizontalAlignment="Center"
				FontSize="{StaticResource Header1FontSize}"/>
			<TextBlock
				Text="Header 2"
				HorizontalAlignment="Center"
				FontSize="{StaticResource Header2FontSize}"/>
			<TextBlock
				Text="Content"
				HorizontalAlignment="Center"
				FontSize="{StaticResource ContentFontSize}"/>
			<TextBlock
				Text="Accent"
				HorizontalAlignment="Center"
				FontSize="{StaticResource AccentFontSize}"/>
		</StackPanel>
	</DockPanel>
</UserControl>
